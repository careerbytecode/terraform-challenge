resource "azurerm_network_security_group" "nsg_fr" {
  name                = "nsg_fr"
  location            = var.location_fr
  resource_group_name = var.resource_group_name

  security_rule {
    name                       = "allow_all"
    priority                   = 100
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "*"
    source_port_range          = "*"
    destination_port_range     = "*"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  }
}

